---
import Layout from '../layouts/Layout.astro';
import { RadialOrbitalTimelineDemo } from '@/components/RadialOrbitalTimelineDemo';
---

<Layout 
    title="Wertzeit | Sonny Callegaro | Création Site Web Suisses, Photographie et réseaux sociaux - Genève"
    description="Wertzeit | Sonny Callegaro : Création de sites web, photographie et réseaux sociaux à Genève. Découvrez mes offres pour portfolio, restaurants et PME."
    keywords="site web, création site web, wertzeit.ch, développeur web genève, site web geneve, Photographe Genève, portfolio en ligne, sonny callegaro, heg, suisse"
>
    <!-- Contenu de l'ancien body ici -->
    <div class="leaf-pattern"></div>

    <nav class="fixed w-full bg-black/80 backdrop-blur-md z-50 border-b border-white/10">
        <div class="progress-container">
            <div class="progress-bar" id="nav-progress"></div>
        </div>
    </nav>

    <section class="section flex items-center justify-center relative overflow-hidden">
        <div id="tsparticles" class="absolute inset-0 w-full h-full z-10"></div>
        <div class="absolute inset-x-20 top-1/4 bg-gradient-to-r from-transparent via-main-accent/50 to-transparent h-[2px] w-3/4 blur-sm z-10 hero-gradient"></div>
        <div class="absolute inset-x-20 top-1/4 bg-gradient-to-r from-transparent via-main-accent/50 to-transparent h-px w-3/4 z-10 hero-gradient"></div>
        <div class="absolute inset-x-60 top-1/3 bg-gradient-to-r from-transparent via-blue-500/30 to-transparent h-[5px] w-1/4 blur-sm z-10 hero-gradient"></div>
        <div class="absolute inset-x-60 top-1/3 bg-gradient-to-r from-transparent via-blue-500/30 to-transparent h-px w-1/4 z-10 hero-gradient"></div>
        <div class="golden-spiral pulse" style="right: -30vmin; top: -30vmin;"></div>
        <div class="max-w-7xl mx-auto px-6 relative z-20">
            <div class="slide-in-left text-center">
                <h1 class="text-[3.3rem] md:text-[4rem] font-light mb-6 leading-none tracking-tight">
                    <span class="text-white block opacity-90">Design.</span>
                    <span class="text-main block mt-2 opacity-95">Code.</span>
                    <span class="text-white block mt-2 opacity-90">Narrate.</span>
                </h1>
                <div class="w-16 h-1 bg-main mx-auto my-6 opacity-90"></div>
                <div id="gooey-container" class="text-2xl text-white mb-8 max-w-2xl mx-auto leading-relaxed h-[70px] relative z-20"></div>
                <div class="flex flex-wrap gap-4 justify-center">
                    <a href="#contact" class="px-6 py-2 text-base bg-main rounded-full font-bold btn-hover glow-effect flex items-center" aria-label="Contactez-moi">
                        WhatsApp  <i class=""></i>
                    </a>
                    <a href="#work" class="flow-button" aria-label="Mes créations">
                        <svg xmlns="http://www.w3.org/2000/svg" class="flow-button-arrow-left" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M5 12h14"></path><path d="m12 5 7 7-7 7"></path></svg>
                        <span class="flow-button-text">Mes créations</span>
                        <span class="flow-button-circle"></span>
                        <svg xmlns="http://www.w3.org/2000/svg" class="flow-button-arrow-right" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M5 12h14"></path><path d="m12 5 7 7-7 7"></path></svg>
                    </a>
                </div>
                <div id="hero-sparkles" class="relative w-72 h-20 mt-8 mx-auto overflow-hidden">
                    <div class="absolute inset-x-4 top-0 bg-gradient-to-r from-transparent via-main-accent to-transparent h-[1px] w-full blur-sm"></div>
                    <div class="absolute inset-x-4 top-0 bg-gradient-to-r from-transparent via-main-accent to-transparent h-px w-full"></div>
                </div>
                <div class="absolute inset-0 w-full h-full bg-black/10 [mask-image:radial-gradient(1100px_600px_at_center,transparent_20%,black)]"></div>
            </div>
        </div>
    </section>

    <section id="work" class="section relative">
    <div class="max-w-7xl mx-auto px-6">
        <div class="mb-16 slide-in-left">
            <h2 class="text-6xl md:text-8xl font-bold mb-4 text-main">Projets Récents</h2>
            <p class="text-3xl text-white max-w-2xl">
                Voici quelques-unes de mes réalisations, incluant le site de la Pizzeria Le Borgia, le site du restaurant le café du rondeau - Yonghe au coeur de carouge et un portfolio façon Marie Kondo & Swiss Design.
            </p>
        </div>
        
        <div class="space-y-32">
            <div class="grid md:grid-cols-2 gap-8 items-center group project-card">
                <div class="slide-in-left relative">
                    <a href="https://www.leborgia.ch/" target="_blank" class="block hover:no-underline" aria-label="Voir le site de la Pizzeria Le Borgia">
                        <div class="relative group-hover:scale-95 transition-transform duration-500 card-3d">
                        <div class="absolute -inset-2 border-main rounded-2xl transform rotate-3 opacity-70 group-hover:rotate-0 transition-all duration-500"></div>
                        <div class="absolute inset-0 bg-main-accent/10 rounded-xl blur-md group-hover:opacity-100 opacity-0 transition-opacity duration-500"></div>
                            <img src="/LeBorgia.avif" alt="Site web du restaurant Le Borgia" loading="lazy" width="1600" height="900" decoding="async" class="relative w-full h-auto object-cover rounded-xl z-10 group-hover:brightness-110 transition-all duration-500 cursor-pointer">
                    </div>
                    </a>
                </div>
                <div class="slide-in-right">
                    <div class="flex items-center mb-4">
                        <div class="w-12 h-12 rounded-full bg-main-gradient flex items-center justify-center text-black font-bold mr-4">01</div>
                        <h3 class="text-3xl font-bold text-main">Pizzeria Le Borgia</h3>
                    </div>
                    <p class="text-lg mb-6 text-white/90">
                        Site vitrine complet pour une pizzeria genevoise avec menu interactif, galerie de photos prise sur place avec mon leica et réservation en ligne moderne via whatsapp, intégration de la carte google maps, The Fork, Instagram, et réalisation d'une applciation interne pour choisir sa pizza.
                    </p>
                    <ul class="space-y-2 mb-6">
                        <li class="flex items-center">
                            <i class="fas fa-check-circle text-main-accent mr-2"></i>
                            <span>Menu interactif avec filtres</span>
                        </li>
                        <li class="flex items-center">
                            <i class="fas fa-check-circle text-main-accent mr-2"></i>
                            <span>Galerie photo professionnelle prise avec mon Leica Q3</span>
                        </li>
                        <li class="flex items-center">
                            <i class="fas fa-check-circle text-main-accent mr-2"></i>
                            <span>Système de réservation intégré via whatsapp complémentant le système téléphonique traditionel existant</span>
                        </li>
                    </ul>
                    <div class="flex flex-wrap gap-2 mb-6">
                        <span class="badge"><i class="fas fa-mobile-alt mr-1"></i> Responsive</span>
                        <span class="badge"><i class="fas fa-bolt mr-1"></i> Rapide</span>
                        <span class="badge"><i class="fas fa-utensils mr-1"></i> Restaurant</span>
                        <span class="badge"><i class="fas fa-camera mr-1"></i> Galerie</span>
                    </div>
                    <a href="https://www.leborgia.ch/" target="_blank" class="inline-flex items-center text-[#F4F4F4]/70 hover:text-main-light transition-all duration-300 border-b border-transparent hover:border-main-light pb-1" aria-label="Visiter le site de la Pizzeria Le Borgia">
                        <span class="mr-2 opacity-0 group-hover:opacity-100 transition-opacity duration-300">
                            <svg width="16" height="16" viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg">
                                <path d="M3 8H13" stroke="currentColor" stroke-width="2" stroke-linecap="round"></path>
                                <path d="M8 3L13 8L8 13" stroke="currentColor" stroke-width="2" stroke-linecap="round"></path>
                        </svg>
                        </span>
                        <span>Visiter le site</span>
                    </a>
                </div>
            </div>
            <div class="grid md:grid-cols-2 gap-8 items-center group project-card">
                <div class="order-2 md:order-1 slide-in-left">
                    <div class="flex items-center mb-4">
                        <div class="w-12 h-12 rounded-full bg-main-gradient flex items-center justify-center text-black font-bold mr-4">02</div>
                        <h3 class="text-3xl font-bold text-main">Marie Kondo & Swiss Design</h3>
                    </div>
                    <p class="text-lg mb-6 text-[#F4F4F4]/90">
                        Portfolio minimaliste pour Marie Kondo, combinant esthétique Swiss Design et approche Kondo.
                    </p>
                    <ul class="space-y-2 mb-6">
                        <li class="flex items-center">
                            <i class="fas fa-check-circle text-main-accent mr-2"></i>
                            <span>Galerie organisée par projets</span>
                        </li>
                        <li class="flex items-center">
                            <i class="fas fa-check-circle text-main-accent mr-2"></i>
                            <span>Design épuré et responsive</span>
                        </li>
                        <li class="flex items-center">
                            <i class="fas fa-check-circle text-main-accent mr-2"></i>
                            <span>Formulaire de contact intégré</span>
                        </li>
                    </ul>
                    <div class="flex flex-wrap gap-2 mb-6">
                        <span class="badge"><i class="fas fa-paint-brush mr-1"></i> Design</span>
                        <span class="badge"><i class="fas fa-user-tie mr-1"></i> Professionnel</span>
                        <span class="badge"><i class="fas fa-mobile-alt mr-1"></i> Responsive</span>
                        <span class="badge"><i class="fas fa-palette mr-1"></i> Minimaliste</span>
                    </div>
                    <a href="https://mariekondoandswissdesign.netlify.app/" target="_blank" class="inline-flex items-center text-[#F4F4F4]/70 hover:text-main-light transition-all duration-300 border-b border-transparent hover:border-main-light pb-1" aria-label="Visiter le portfolio Marie Kondo & Swiss Design">
                        <span class="mr-2 opacity-0 group-hover:opacity-100 transition-opacity duration-300">
                            <svg width="16" height="16" viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg">
                                <path d="M3 8H13" stroke="currentColor" stroke-width="2" stroke-linecap="round"></path>
                                <path d="M8 3L13 8L8 13" stroke="currentColor" stroke-width="2" stroke-linecap="round"></path>
                        </svg>
                        </span>
                        <span>Visiter le site</span>
                    </a>
                </div>
                <div class="order-1 md:order-2 slide-in-right relative">
                    <a href="https://mariekondoandswissdesign.netlify.app/" target="_blank" class="block hover:no-underline" aria-label="Voir le portfolio Marie Kondo & Swiss Design">
                        <div class="relative group-hover:scale-95 transition-transform duration-500 card-3d">
                        <div class="absolute -inset-2 border-main rounded-2xl transform -rotate-3 opacity-70 group-hover:rotate-0 transition-all duration-500"></div>
                        <div class="absolute inset-0 bg-main-accent/10 rounded-xl blur-md group-hover:opacity-100 opacity-0 transition-opacity duration-500"></div>
                            <img src="/mariekondo.jpg" alt="Portfolio de Marie Kondo & Swiss Design" loading="lazy" width="800" height="450" decoding="async" class="relative w-full h-auto object-cover rounded-xl z-10 group-hover:brightness-110 transition-all duration-500 cursor-pointer">
                    </div>
                    </a>
                </div>
            </div>

            <div class="grid md:grid-cols-2 gap-8 items-center group project-card">
                <div class="slide-in-left relative">
                    <a href="https://www.yonghe.ch/" target="_blank" class="block hover:no-underline" aria-label="Voir le site du restaurant Le Yonghe">
                        <div class="relative group-hover:scale-95 transition-transform duration-500 card-3d">
                            <div class="absolute -inset-2 border-main rounded-2xl transform rotate-3 opacity-70 group-hover:rotate-0 transition-all duration-500"></div>
                            <div class="absolute inset-0 bg-main-accent/10 rounded-xl blur-md group-hover:opacity-100 opacity-0 transition-opacity duration-500"></div>
                            <img src="/Yonghe.avif" alt="Site web du restaurant Le Yonghe" loading="lazy" width="1600" height="900" decoding="async" class="relative w-full h-auto object-cover rounded-xl z-10 group-hover:brightness-110 transition-all duration-500 cursor-pointer">
                        </div>
                    </a>
                </div>
                <div class="slide-in-right">
                    <div class="flex items-center mb-4">
                        <div class="w-12 h-12 rounded-full bg-main-gradient flex items-center justify-center text-black font-bold mr-4">03</div>
                        <h3 class="text-3xl font-bold text-main">Restaurant Le Yonghe</h3>
                    </div>
                    <p class="text-lg mb-6 text-white/90">
                        Ultra-populaire à Carouge (<strong>2200&nbsp;avis positifs sur The&nbsp;Fork</strong>),
                        Le Yonghe avait besoin d'un site performant et élégant.  
                        Je suis passé sur place&nbsp;: shooting photo complet au Leica, design from&nbsp;scratch,
                        achat du nom de domaine et mise en ligne <em>full-stack</em>.
                    </p>
                    <ul class="space-y-2 mb-6">
                        <li class="flex items-center">
                            <i class="fas fa-check-circle text-main-accent mr-2"></i>
                            <span>Menu interactif trilingue (FR/EN/CH) optimisé mobile</span>
                        </li>
                        <li class="flex items-center">
                            <i class="fas fa-check-circle text-main-accent mr-2"></i>
                            <span>Galerie photo professionnelle (shooting maison)</span>
                        </li>
                        <li class="flex items-center">
                            <i class="fas fa-check-circle text-main-accent mr-2"></i>
                            <span>Réservations en 1&nbsp;clic via WhatsApp &amp; The&nbsp;Fork</span>
                        </li>
                    </ul>
                    <div class="flex flex-wrap gap-2 mb-6">
                        <span class="badge"><i class="fas fa-mobile-alt mr-1"></i> Responsive</span>
                        <span class="badge"><i class="fas fa-bolt mr-1"></i> Rapide</span>
                        <span class="badge"><i class="fas fa-utensils mr-1"></i> Restaurant</span>
                        <span class="badge"><i class="fas fa-camera mr-1"></i> Galerie</span>
                    </div>
                    <a href="https://www.yonghe.ch/" target="_blank" class="inline-flex items-center text-[#F4F4F4]/70 hover:text-main-light transition-all duration-300 border-b border-transparent hover:border-main-light pb-1" aria-label="Visiter le site du Yonghe">
                        <span class="mr-2 opacity-0 group-hover:opacity-100 transition-opacity duration-300">
                            <svg width="16" height="16" viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg">
                                <path d="M3 8H13" stroke="currentColor" stroke-width="2" stroke-linecap="round"></path>
                                <path d="M8 3L13 8L8 13" stroke="currentColor" stroke-width="2" stroke-linecap="round"></path>
                            </svg>
                        </span>
                        <span>Visiter le site</span>
                    </a>
                </div>
            </div>
        </div>
        <div class="mt-32 text-center slide-in-left" style="transition-delay: 0.2s">
            <h3 class="text-2xl md:text-4xl font-bold mb-6">Un projet en tête ?</h3>
            <a href="#contact" class="inline-block px-8 py-4 bg-main-gradient rounded-full font-bold btn-hover glow-effect text-lg relative overflow-hidden" aria-label="Discutons de votre projet">
                <span class="relative z-10 flex items-center">
                    <i class="fas fa-lightbulb mr-2"></i> Discutons de votre projet
                </span>
            </a>
        </div>
    </div>
</section>

<section id="barney" class="section relative py-20">
    <div class="max-w-7xl mx-auto px-6 relative z-10">
        <div class="mb-16 text-center slide-in-left">
            <h2 class="text-5xl md:text-7xl font-bold mb-4 text-main text-glow-green">Expertise</h2>
            <p class="text-xl max-w-3xl mx-auto text-white/90">
                Découvrez mes domaines d'expertise avec une approche interactive
            </p>
        </div>
        <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
            <div class="expertise-card bg-white/5 p-6 rounded-xl border border-white/10 backdrop-blur-sm hover:border-main-accent/30 transition-all duration-300 hover:bg-white/10 group">
                <div class="text-main text-xl mb-4 flex items-center justify-center">
                    <i class="fas fa-laptop-code mr-2 group-hover:text-main-accent transition-colors duration-300"></i> 
                    <span class="group-hover:text-main-accent transition-colors duration-300">Technique</span>
                </div>
                <div class="h-0.5 w-16 bg-main-accent/50 mx-auto mb-4 group-hover:w-24 transition-all duration-300"></div>
                <p class="text-white/90 text-base text-center leading-relaxed">
                    Développement en JavaScript, Vue.js et React. Hébergement Netlify/Vercel.
                </p>
            </div>
            <div class="expertise-card bg-white/5 p-6 rounded-xl border border-white/10 backdrop-blur-sm hover:border-main-accent/30 transition-all duration-300 hover:bg-white/10 group">
                <div class="text-main text-xl mb-4 flex items-center justify-center">
                    <i class="fas fa-paint-brush mr-2 group-hover:text-main-accent transition-colors duration-300"></i>
                    <span class="group-hover:text-main-accent transition-colors duration-300">Design</span>
                </div>
                <div class="h-0.5 w-16 bg-main-accent/50 mx-auto mb-4 group-hover:w-24 transition-all duration-300"></div>
                <p class="text-white/90 text-base text-center leading-relaxed">
                    Approche minimaliste inspirée du Swiss Design et du nombre d'or.
                </p>
            </div>
            <div class="expertise-card bg-white/5 p-6 rounded-xl border border-white/10 backdrop-blur-sm hover:border-main-accent/30 transition-all duration-300 hover:bg-white/10 group">
                <div class="text-main text-xl mb-4 flex items-center justify-center">
                    <i class="fas fa-book-open mr-2 group-hover:text-main-accent transition-colors duration-300"></i>
                    <span class="group-hover:text-main-accent transition-colors duration-300">Storytelling</span>
                </div>
                <div class="h-0.5 w-16 bg-main-accent/50 mx-auto mb-4 group-hover:w-24 transition-all duration-300"></div>
                <p class="text-white/90 text-base text-center leading-relaxed">
                    Mise en récit de votre histoire pour créer un lien émotionnel avec votre audience.
                </p>
            </div>
            <div class="expertise-card bg-white/5 p-6 rounded-xl border border-white/10 backdrop-blur-sm hover:border-main-accent/30 transition-all duration-300 hover:bg-white/10 group">
                <div class="text-main text-xl mb-4 flex items-center justify-center">
                    <i class="fas fa-camera mr-2 group-hover:text-main-accent transition-colors duration-300"></i>
                    <span class="group-hover:text-main-accent transition-colors duration-300">Photographie</span>
                </div>
                <div class="h-0.5 w-16 bg-main-accent/50 mx-auto mb-4 group-hover:w-24 transition-all duration-300"></div>
                <p class="text-white/90 text-base text-center leading-relaxed">
                    Photos professionnelles avec Leica Q3 qui mettent en valeur votre projet.
                </p>
            </div>
        </div>
    </div>
</section>

<!-- Section pour RadialOrbitalTimelineDemo ajustée -->
<section id="radial-timeline-section" class="section relative py-32 mt-20 mb-20" style="overflow: visible;">
    <div class="max-w-7xl mx-auto px-6 text-center">
        <RadialOrbitalTimelineDemo client:visible />
    </div>
</section>

<section class="section relative">
    <div class="max-w-7xl mx-auto px-6 relative z-10">
        <div class="mb-16 text-center slide-in-left">
            <h2 class="text-5xl md:text-7xl font-bold mb-4 text-main text-glow-green">Mes Offres</h2>
            <p class="text-xl max-w-3xl mx-auto text-white/90">
                <span class="text-main">3</span> <span class="text-main">propositions</span> adaptées à chaque besoin, avec une approche technique simplifiée
            </p>
        </div>
        <div class="grid md:grid-cols-3 gap-8">
            <div class="offer-card glow-offer bg-white/5 p-8 rounded-2xl border border-blue-200/30 backdrop-blur-sm hover:shadow-lg transition-all duration-500 card-3d h-full order-3 md:order-1">
                <div class="offer-content flex flex-col h-full">
                    <h3 class="text-xl md:text-2xl font-bold mb-4 text-blue-200 flex items-center justify-center">CV/portfolio minimaliste <i class="fas fa-user-circle ml-2"></i></h3>
                    <div class="price-container h-16 flex items-center justify-center mb-6">
                        <div class="text-3xl md:text-4xl font-bold text-center">1 400 CHF</div>
                    </div>
